        function messageBox(code) {
            var messageText = "", messageType = "warning";
            var widthAlert = "255px", heightAlert = "300px";
            switch (code) {
                case "filewarning":
                    messageText = 'Lütfen geçerli formatta dosya seçiniz';

                    break;
                case "selectfilewarning":
                    messageText = 'Maksimum dosya sınırı aştınız';
                    break;
                case "mesajwarning":
