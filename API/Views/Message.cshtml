                    break;
                case "companywarning":
                    messageText = 'Erişim engellendi.\nBu mesajlaşmanın süresi bitmiştir!';
                    messageType = "error";
                    widthAlert = "325px";
                    heightAlert = "340px";
                    break;
                default:
            }
            Swal.fire(
                messageText,
                '',
                messageType
            );
            $(".swal2-popup.swal2-modal").css("width", widthAlert)
            $(".swal2-popup.swal2-modal").css("height", heightAlert)
        }
